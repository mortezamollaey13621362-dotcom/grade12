            },
            {
              "id": "q5",
              "type": "mcq",
              "text": "What traditional structure in Yazd uses wind power?",
              "options": [
                { "text": "Wind turbines.", "isCorrect": false },
                { "text": "Wind towers.", "isCorrect": true },
                { "text": "Solar panels.", "isCorrect": false }
              ]
            },
            {
              "id": "q6",
              "type": "mcq",
              "text": "What is the function of wind towers?",
              "options": [
                { "text": "To produce electricity.", "isCorrect": false },
                { "text": "As natural air cooling systems.", "isCorrect": true },
                { "text": "To store water.", "isCorrect": false }
              ]
            },
            {
              "id": "q7",
              "type": "gap",
              "text": "Complete: Instead of using electricity to make wind, a turbine uses __ to make __.",
              "options": [
                { "text": "wind / electricity", "isCorrect": true },
                { "text": "sun / heat", "isCorrect": false },
                { "text": "water / power", "isCorrect": false }
              ]
            },
            {
              "id": "q8",
              "type": "tf",
              "text": "Emad's father says 'no' to the trip to Yazd.",
              "options": [
                { "text": "True", "isCorrect": false },
                { "text": "False", "isCorrect": true }
